{
  "name": "pandoc-ts",
  "version": "2.0.0",
  "description": "TypeScript wrapper for pandoc with automatic binary installation",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "dist/*.js.map",
    "dist/*.d.ts.map",
    "!dist/test.*",
    "bin/pandoc-ts.js",
    "scripts"
  ],
  "bin": {
    "pandoc-ts": "./bin/pandoc-ts.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "install-pandoc": "node scripts/install-pandoc.js",
    "postinstall": "echo '\nðŸš€ pandoc-ts installed successfully!\nðŸ“¦ Pandoc binary will download automatically on first use.\nðŸ’¡ Or run: npm run install-pandoc to install immediately.\n'",
    "test": "tsc -p tsconfig.test.json && node --test dist/test.js",
    "test:watch": "npm run test -- --watch",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "pandoc",
    "typescript",
    "markdown",
    "conversion",
    "document"
  ],
  "author": "Adam Barbato",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adambarbato/pandoc-ts.git"
  },
  "dependencies": {
    "@types/node": "^20.11.0",
    "cross-spawn": "^7.0.3",
    "node-fetch": "^3.3.2",
    "tar": "^6.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0",
    "yauzl": "^3.0.0"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/tar": "^6.1.11",
    "@types/yauzl": "^2.10.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
